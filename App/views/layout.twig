<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}TalentHub - Job Board Platform
			{% endblock %}
		</title>

		<!-- Tailwind CSS -->
		<script src="https://cdn.tailwindcss.com"></script>

		<!-- Font Awesome -->
		<link
		rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

		<!-- Custom CSS -->
		<link
		rel="stylesheet" href="{{ base_url }}/css/style.css">

		<!-- Tailwind Config -->
		<script>
			tailwind.config = {
theme: {
extend: {
colors: {
primary: '#2563eb',
secondary: '#64748b'
}
}
}
}
		</script>
	</head>
	<body
		class="bg-gray-50 min-h-screen flex flex-col">
		<!-- Navigation -->
		<nav class="bg-white shadow-md sticky top-0 z-50">
			<div class="container mx-auto px-4">
				<div
					class="flex justify-between items-center py-4">
					<!-- Logo -->
					<a href="{{ url() }}" class="text-2xl font-bold text-blue-600 hover:text-blue-700 transition">
						<i class="fas fa-briefcase mr-2"></i>TalentHub
					</a>

					<!-- Navigation Links -->
					<div class="flex items-center space-x-6">
						{% if session.user_full_name is defined %}
							<!-- User Menu -->
							<span class="text-gray-700 hidden md:inline">
								<i class="fas fa-user-circle mr-1"></i>
								{{ session.user_full_name }}
							</span>

							{% if session.user_role == 'admin' %}
								<a href="{{ url('admin/dashboard') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-tachometer-alt mr-1"></i>Dashboard
								</a>
								<a href="{{ url('admin/categories') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-folder mr-1"></i>Categories
								</a>
								<a href="{{ url('admin/tags') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-tags mr-1"></i>Tags
								</a>
							{% elseif session.user_role == 'recruiter' %}
								<a href="{{ url('recruiter/dashboard') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-tachometer-alt mr-1"></i>Dashboard
								</a>
								<a href="{{ url('recruiter/offers') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-briefcase mr-1"></i>My Offers
								</a>
								<a href="{{ url('recruiter/applications') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-inbox mr-1"></i>Applications
								</a>
							{% elseif session.user_role == 'candidate' %}
								<a href="{{ url('candidate/dashboard') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-tachometer-alt mr-1"></i>Dashboard
								</a>
								<a href="{{ url('candidate/browseOffers') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-search mr-1"></i>Browse Jobs
								</a>
								<a href="{{ url('candidate/myApplications') }}" class="text-gray-700 hover:text-blue-600 transition">
									<i class="fas fa-file-alt mr-1"></i>My Applications
								</a>
							{% endif %}

							<a href="{{ url('auth/logout') }}" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">
								<i class="fas fa-sign-out-alt mr-1"></i>Logout
							</a>
						{% else %}
							<!-- Guest Menu -->
							<a href="{{ url() }}" class="text-gray-700 hover:text-blue-600 transition">Home</a>
							<a href="{{ url('auth/login') }}" class="text-gray-700 hover:text-blue-600 transition">
								<i class="fas fa-sign-in-alt mr-1"></i>Login
							</a>
							<a href="{{ url('auth/register') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
								<i class="fas fa-user-plus mr-1"></i>Register
							</a>
						{% endif %}
					</div>
				</div>
			</div>
		</nav>

		<!-- Main Content -->
		<main class="flex-grow"> {% block content %}{% endblock %}
			</main>

			<!-- Footer -->
			<footer class="bg-gray-800 text-white py-8 mt-auto">
				<div class="container mx-auto px-4">
					<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
						<div>
							<h3 class="text-xl font-bold mb-4">
								<i class="fas fa-briefcase mr-2"></i>TalentHub
							</h3>
							<p class="text-gray-400">Connecting talented candidates with great opportunities.</p>
						</div>
						<div>
							<h4 class="font-semibold mb-4">Quick Links</h4>
							<ul class="space-y-2 text-gray-400">
								<li>
									<a href="{{ url() }}" class="hover:text-white transition">Home</a>
								</li>
								<li>
									<a href="{{ url('auth/register') }}" class="hover:text-white transition">Register</a>
								</li>
								<li>
									<a href="{{ url('auth/login') }}" class="hover:text-white transition">Login</a>
								</li>
							</ul>
						</div>
						<div>
							<h4 class="font-semibold mb-4">Contact</h4>
							<p class="text-gray-400">
								<i class="fas fa-envelope mr-2"></i>info@talenthub.com<br>
								<i class="fas fa-phone mr-2"></i>+1 (555) 123-4567
							</p>
						</div>
					</div>
					<div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
						<p>&copy;
							{{ "now"|date("Y") }}
							TalentHub. All rights reserved.</p>
					</div>
				</div>
			</footer>
		</body>
	</html>
