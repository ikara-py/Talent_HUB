<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - TalentHub</title>
    <link rel="stylesheet" href="{{ base_url }}/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="{{ url() }}" class="logo">TalentHub</a>
            <div class="nav-links">
                <span>Welcome, {{ session.user_full_name }}!</span>
                <a href="{{ url('auth/logout') }}" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <aside class="sidebar">
            <h3>Admin Menu</h3>
            <ul>
                <li><a href="{{ url('admin/dashboard') }}" class="active">Dashboard</a></li>
                <li><a href="{{ url('admin/categories') }}">Manage Categories</a></li>
                <li><a href="{{ url('admin/tags') }}">Manage Tags</a></li>
                <li><a href="{{ url('admin/users') }}">Manage Users</a></li>
                <li><a href="{{ url('admin/offers') }}">Manage Offers</a></li>
            </ul>
        </aside>

        <main class="dashboard-content">
            <h1>Admin Dashboard</h1>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Categories</h3>
                    <p class="stat-number">{{ totalCategories ?? 0 }}</p>
                </div>
                <div class="stat-card">
                    <h3>Total Tags</h3>
                    <p class="stat-number">{{ totalTags ?? 0 }}</p>
                </div>
                <div class="stat-card">
                    <h3>Total Offers</h3>
                    <p class="stat-number">0</p>
                </div>
                <div class="stat-card">
                    <h3>Total Applications</h3>
                    <p class="stat-number">0</p>
                </div>
            </div>

            <div class="quick-actions">
                <h2>Quick Actions</h2>
                <div class="action-buttons">
                    <a href="{{ url('admin/createCategory') }}" class="btn btn-primary">Add Category</a>
                    <a href="{{ url('admin/createTag') }}" class="btn btn-primary">Add Tag</a>
                    <a href="{{ url('admin/categories') }}" class="btn btn-secondary">View Categories</a>
                    <a href="{{ url('admin/tags') }}" class="btn btn-secondary">View Tags</a>
                </div>
            </div>
        </main>
    </div>
</body>
</html>