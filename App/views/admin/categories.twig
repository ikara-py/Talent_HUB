<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories - TalentHub Admin</title>
    <link rel="stylesheet" href="{{ base_url }}/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <a href="{{ url('admin/dashboard') }}" class="logo">TalentHub Admin</a>
            <div class="nav-links">
                <a href="{{ url('admin/categories') }}">Categories</a>
                <a href="{{ url('admin/tags') }}">Tags</a>
                <a href="{{ url('auth/logout') }}" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container" style="margin-top: 2rem;">
        <div class="admin-header">
            <h1>Manage Categories</h1>
            <a href="{{ url('admin/createCategory') }}" class="btn btn-primary">+ Add Category</a>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if categories is empty %}
                        <tr>
                            <td colspan="3" style="text-align: center;">No categories found.</td>
                        </tr>
                    {% else %}
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.getId() }}</td>
                                <td>{{ category.getName() }}</td>
                                <td class="actions">
                                    <a href="{{ url('admin/editCategory/' ~ category.getId()) }}" class="btn btn-small btn-secondary">Edit</a>
                                    <a href="{{ url('admin/deleteCategory/' ~ category.getId()) }}" 
                                       class="btn btn-small btn-danger" 
                                       onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>
